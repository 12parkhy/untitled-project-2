<h2 style="text-align: center;">Corona Virus Data</h2>
<div class="row" style="margin-top: 2.5rem;">
    <div class="col-md-6 m-auto" style="text-align: center;">
        <%= new Date(globalCurrentData.created) %>
    </div>
</div>
<div class="row" style="margin-top: 2.5rem;">
    <div class="col-md-6 m-auto" style="text-align: center;">
        <div class="card card-body">
            <p>
                Total Confirmed:
                <%= globalCurrentData.totalConfirmed.toLocaleString() %>
            </p>
        </div>
    </div>
</div>
<div class="row" style="margin-top: 2.5rem;">
    <div class="col-md-6 m-auto" style="text-align: center;">
        <div class="card card-body">
            <p>
                Total Active Cases:
                <%= globalCurrentData.totalActiveCases.toLocaleString() %>
            </p>
            <p>
                Total Recovered:
                <%= globalCurrentData.totalRecovered.toLocaleString() %>
            </p>
            <p>
                Total Deaths:
                <%= globalCurrentData.totalDeaths.toLocaleString() %>
            </p>
        </div>
    </div>
</div>
<div class="row" style="margin-top: 2.5rem;">
    <div class="col-md-6 m-auto" style="text-align: center;">
        <div class="card card-body">
            <p>
                Total New Cases:
                <%= globalCurrentData.totalNewCases.toLocaleString() %>
            </p>
            <p>
                Total New Deaths:
                <%= globalCurrentData.totalNewDeaths.toLocaleString() %>
            </p>
        </div>
    </div>
</div>
<div class="row" style="margin-top: 2.5rem;">
    <div class="col">
        <canvas id="globalCurrentPieChart"></canvas>
    </div>
</div>
<div class="row" style="margin-top: 2.5rem;">
    <div class="col">
        <canvas id="globalHistoryLineChart"></canvas>
    </div>
</div>
<div class="row" style="margin-top: 2.5rem;">
    <div class="col-md" style="text-align: right;">
        Search: <input type="text" id='searchCountries'>
    </div>
</div>
<div id="table-container" class="table-responsive" style="margin-top: 2.5rem; margin-bottom: 5rem">
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th id="country">Country <i class="fas fa-sort"></i></th>
                <th id="totalConfirmed">Total Confirmed <i class="fas fa-sort"></i></th>
                <th id="activeCases">Active Cases <i class="fas fa-sort"></i></th>
                <th id="totalCritical">Total Critical <i class="fas fa-sort"></i></th>
                <th id="totalRecovered">Total Recovered <i class="fas fa-sort"></i></th>
                <th id="totalDeaths">Total Deaths <i class="fas fa-sort"></i></th>
                <th id="dailyConfirmed">Daily Confirmed <i class="fas fa-sort"></i></th>
                <th id="dailyDeaths">Daily Deaths <i class="fas fa-sort"></i></th>
                <th id="totalConfirmedPerMillionPopulation">Total Confirmed Per Million Population <i
                        class="fas fa-sort"></i></th>
                <th id="totalDeathsPerMillionPopulation">Total Deaths Per Million Population <i class="fas fa-sort"></i>
                </th>
                <th id="lastUpdated">Last Updated <i class="fas fa-sort"></i></th>
            </tr>
        </thead>
        <tbody id='countriesTableBody'>
        </tbody>
        <tfoot>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tfoot>
    </table>
</div>
</div>
</div>